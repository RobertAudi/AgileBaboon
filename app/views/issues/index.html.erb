<h3 class="heading">Issues</h3>
<p style="margin-bottom: 20px;"><%= link_to "Create new issue", new_project_issue_path(params[:project_id]) %></p>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Type</th>
    <th>User</th>
  </tr>
  <% @issues.each do |issue| %>
    <tr>
      <td><%= link_to issue.title, edit_project_issue_path(params[:project_id], issue) %></td>
      <td><%= issue.issue_type.label %></td>
      <td><%= issue.user.username %></td>
    </tr>
  <% end %>
</table>

<%= paginate @issues %>
